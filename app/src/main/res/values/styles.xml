<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?header_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MyTheme1" >
        <item name="header_background">@color/colorBlack</item>
        <item name="content_background">@color/colorWhite</item>
    </style>

    <style name="AppTheme.MyTime2" >
        <item name="header_background">@color/colorRed</item>
        <item name="content_background">@color/colorYellow</item>
    </style>

</resources>
